icecream_rating=6
sleeping_rating=8
first_name=('chengxiang')
last_name=('xiao')
myname=first_name+last_name
happiness_rating=(icecream_rating+sleeping_rating)/2
print(icecream_rating)
print(sleeping_rating)
print(happiness_rating)
print(myname)
print("My name is",myname,"and I give eating ice cream a score of",icecream_rating,"out of 10!",
     "I am",first_name, "and my sleeping rating is ",sleeping_rating,"/10!",
     "Base on the factors above, my happiness rating is ",happiness_rating,"out of 10")
